package:
    name: vcs
    version: "8.2.1.rc1"

source:
  url: https://github.com/CDAT/vcs/archive/v8.2.1.rc1.tar.gz
  sha256: 8718511a85e8634b8b9682a3e8e28a2b13078d167e0b10a9737ccc18d544a5d2

build:
  number: @BUILD_NUMBER@
  noarch: python
  script: python setup.py install
 
requirements:
  build:
    - python
    - setuptools
    - cdat_info
  run:
    - python
    - cdat_info
    - genutil
    - dv3d
    - libcdms
    - vtk-cdat
    - cdms2
    - cdutil
    - requests
    - {{ pin_compatible('numpy') }}
    - ghostscript

test:
  commands:
    - python -c "import vcs"

about:
    home:  http://github.com/cdat/vcs
    summary: VCS Allows scientists to produce highly customized plots. Everything can be precisely and logically controlled. VCS is specialized toward Earth-science plots.
    license: BSD
    license_file: bsd-3-clause.txt




