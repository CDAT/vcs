package:
    name: vcs
    version: "8.2.1"

source:
  url: https://github.com/CDAT/vcs/archive/v8.2.1.tar.gz
  sha256: 9f647c940396cb40003b96484bfa48d2d0fce38cf49217e06054c4c9cc66b5ce 

build:
  number: 0
  noarch: python
  script: python setup.py install
 
requirements:
  build:
    - python
    - setuptools
    - cdat_info
  run:
    - python
    - cdat_info
    - genutil
    - dv3d
    - libcdms
    - vtk-cdat
    - cdms2
    - cdutil
    - requests
    - {{ pin_compatible('numpy') }}
    - ghostscript

test:
  commands:
    - python -c "import vcs"

about:
    home:  http://github.com/cdat/vcs
    summary: VCS Allows scientists to produce highly customized plots. Everything can be precisely and logically controlled. VCS is specialized toward Earth-science plots.
    license: BSD
    license_file: bsd-3-clause.txt




